{
    "compilerOptions": {
        "allowSyntheticDefaultImports": false,
        "declaration": true,
        "declarationMap": true,
        "incremental": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "strict": true,
        "target": "es2015"
    },
    "include": ["src/**/*"]
}
