{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "DOM",
      "ES5",
      "ES2015.Collection"
    ],
    "target": "ES5",
    "noImplicitAny": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true, // Required for debugging NPM published package.
    "outDir": "dist/",
    "rootDir": "src/",
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test/converter/**/*.ts"
  ]
}
