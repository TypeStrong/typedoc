{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "noImplicitAny": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "declaration": false,
    "sourceMap": true,
    "inlineSources": true, // Required for debugging NPM published package.
    "outDir": "dist/",
    "rootDir": ".",
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "test/converter/**/*.ts",
	"dist/**/*.ts"
  ]
}
