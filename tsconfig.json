{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "noImplicitAny": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true, // Required for debugging NPM published package.
    "outDir": "dist/",
    "rootDir": "src/",
    "experimentalDecorators": true
  },
  "include": [
    "src/lib/**/*.ts",
    "src/test/*.ts"
  ],
  "exclude": [
    "src/test/converter/**/*.ts"
  ]
}
