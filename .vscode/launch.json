    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceRoot}",
            "args": [
                "--require",
                "ts-node/register",
                "--watch-extensions",
                "ts",
                "--timeout=10000",
                "${workspaceRoot}/src/test/converter.test.ts"
            ],
        }
    ]
}
