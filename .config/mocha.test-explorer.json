{
    "$schema": "https://json.schemastore.org/mocharc.json",
    "extension": ["ts"],
    "ignore": ["src/test/slow/**", "src/test/packages/**"],
    "package": "./package.json",
    "require": "ts-node/register",
    "slow": 500,
    "spec": ["src/**/*.test.ts"],
    "timeout": 0,
    "watch-files": ["src/**/*.ts"]
}
